        Apple_mark {
            bindings = <
&kp F1                &kp F2     &kp F3          &kp F4             &kp F5                                  &kp F6                 &kp F7                &kp F8         &kp F9       &kp F10
&kp EXCLAMATION       &kp HASH   &kp AMPERSAND   &kp PIPE           &kp LEFT_BRACKET                        &kp RIGHT_BRACKET      &kp LC(C)             &kp PAGE_UP    &kp LC(V)    &kp F11
